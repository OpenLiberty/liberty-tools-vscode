{
  "extends": "tslint:recommended",
  "rules": {
    "indent": false,
    "max-line-length": false,
    "max-classes-per-file": false,
    "curly": true,
    "semicolon": [
      true,
      "always"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ]
  },
  "defaultSeverity": "warning"
}